//Standards are defined by the Regenie paper's treatment of UKBioBank data.

params {
  OutDir="[PATH]/"              //## Directory for output
                                            //plink script Specific
VCF_files="[PATH]/[NAME].vcf.gz"
VCF_files_indexes="[PATH]/[NAME].vcf.gz.tbi"

outname = "" //## name of the concat dataset (only used when converting many-to-one)

// STANDARD FILTERING
maf=0.01        //## Minimum allele frequency
geno=0.99          //## Maximum Missing genotype frequency per-variant
mind=0.99          //## Maximum Missing genotype frequency per-sample
HWE=1e-15         //## Hardy-Weinberg equilibrium tests

//Other

Plink2_Options="--indep-pairwise 1000 100 0.9"

//ADD plinked.prune.in to the relevant --extract data

}

process {
  executor = "slurm"
  	// can add --account=[] to cluster Options
  clusterOptions = ""
  cpus = 1
  time = "12h"
  memory = "10GB"
}
